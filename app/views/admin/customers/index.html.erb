<div class="container">
  <div class="row">
    <div class="col-lg-10 mx-auto my-5">
      <h4>会員一覧</h4>

      <div class="row mt-3">
        <div class="col-lg-10 mx-auto">
          <table class="table">
            <thead>
              <tr>
                <th style="width: 15%">会員ID</th>
                <th style="width: 30%">氏名</th>
                <th style="width: 35%">メールアドレス</th>
                <th style="width: 20%">ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
                <tr>
                  <td><%= customer.id %></td>
                  <td>
                    <%= link_to admin_customer_path(customer) do %>
                      <u class="text-dark"><%= customer.last_name %><%= customer.first_name %></u>
                    <% end %>
                  </td>
                  <td><%= customer.email %></td>
                  <td>
                    <% if customer.is_deleted == false %>
                      <div class="text-success"><strong>有効</strong></div>
                    <% else %>
                      <div class="text-muted"><strong>退会</strong></div>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <%= paginate @customers %>
    </div>
  </div>
</div>