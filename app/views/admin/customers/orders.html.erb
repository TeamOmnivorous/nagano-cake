<div class="container">
  <div class="row">
    <div class="col-lg-12 my-5">
      <h4><%= @customer.last_name %><%= @customer.first_name %>さんの注文履歴</h4>

      <div class="row mt-3">
        <div class="col-lg-10 mx-auto">
          <table class="table">
            <thead>
              <tr>
                <td style="width: 40%">購入日時</td>
                <td style="width: 30%">注文個数</td>
                <td style="width: 30%">注文ステータス</td>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td>
                    <%= link_to admin_order_path(order) do %>
                      <u class="text-dark"><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></u>
                    <% end %>
                  </td>
                  <td>
                    <% order.order_items.each do |order_items| %>
                      <% @amount_total = @amount_total + order_items.amount %>
                    <% end %>
                    <%= @amount_total %>
                    <% @amount_total = 0 %>
                  </td>
                  <td><%= order.order_status %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <%= paginate @orders %>
    </div>
  </div>
</div>