<div class="container">
  <h5><span style="background-color:#DDDDDD">ジャンル一覧・追加</span></h5>
    <div class="container">
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
     <div class="row pt-4 pb-4">
      <div class="col-2 text-center">
       <%= f.label :name, "ジャンル名" %>
       </div>
       <div class="col-3">
       <%= f.text_field :name %>
       </div>
       <div class="col-3">
      <%= f.submit '新規登録',class:'btn btn-success btn-block' %>
      <% end %>
     </div>
  </div>
</div>
 <div class="container">
  <div class="row pt-4">
     <div class="col-4">
       <table class="table">
         <thead>
         <tr>
          <th>ジャンル</th>
          <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <th><%= genre.name %></th>
              <th><%= link_to '編集する', edit_admin_genre_path(genre),class: 'btn-sm btn-success' %></th>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
 </div>


