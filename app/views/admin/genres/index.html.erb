<div class="container px-5 px-sm-0">
  <div class="row">
     <div class="col-md-3">
      <h4><span>ジャンル一覧・追加</span></h4>
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name %>
      <%= f.submit '新規登録' %>
      <% end %>
      </div>
  </div>
</div>
 <div class="container px-5 px-sm-0">
  <div class="row">
     <div class="col-md-3">
       <table class="table">
         <thead>
         <tr>
          <th>ジャンル</th>
          <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <th><%= genre.name %></th>
              <th><%= link_to '編集する', edit_admin_genre_path(genre) %></th>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
 </div>


