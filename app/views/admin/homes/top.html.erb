<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-12">
      <h2 class="heading py-3">注文履歴一覧</h2>
    </div>
    <div class="col-12">
      <table class='table'>
        <thead>
          <tr class="table-secondary">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>2022/10/21 12:30:00</td>
            <td>軽騎大好</td>
            <td>１００</td>
            <td>入金待ち</td>
          </tr>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
            <td><%= order.customer.last_name %> <%= order.customer.first_name %></td>
            <td><%= @orders.count %></td>
            <td><%= order.order_status %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>