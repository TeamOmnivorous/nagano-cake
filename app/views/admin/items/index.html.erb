<div class="container">
  <div class="row">
    <h2>商品一覧</h2>
    <div class="col-md-9"></div>
      <div class="col-xs-1"></div>
        <div class="text-right">
          <%= link_to new_admin_item_path do %>
            <i class="fas fa-home"></i><!--i class="fa-solid fa-circle-plus"></i-->
          <% end %>
        </div>
    </div>

    <table class="table product-table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name,admin_item_path(item) %></td>
          <td><%= (item.with_tax_price) %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_saled %>
              <%= "販売中" %>
            <% else %>
              <%=  "売り切れ" %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
 </div>
</div>
