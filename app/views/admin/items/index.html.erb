<div class="container">
  <div class="row my-5">
    <div class="col-lg-12">
      <div class="row my-2">
        <div class "col-3">
          <h2 class ="bg-light">商品一覧</h2>
        </div>

            <div class="col-3"></div>
              <div class="col-6 text-right">
                <%= link_to new_admin_item_path do %>
                <button type="button" class=" btn-circle-flat  btn-circle">＋</button>  <!--i class="fas fa-home"></i-->
                <% end %>
              </div>
            </div>


      <table class="table product-table">
        <thead class ="table-secondary">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><u><%= link_to item.name,admin_item_path(item), class: "text-body" %></u></td>
            <td><%= (item.with_tax_price).to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_saled %>
                <strong class="text-success"><%= "販売中" %></strong>
              <% else %>
                <strong class="text-secondary"><%= "販売停止中" %></strong>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row">
        <div class="col3 mx-auto"><%= paginate @items %></div>
      </div>
    </div>
 </div>
</div>