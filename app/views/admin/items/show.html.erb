<div class="container">
  <div class="row">
    <h2 class ="bg-secondary">商品詳細</h2>

    <div class="col-xs-4">
      <%= attachment_image_tag @item, :image, size:'200x200', fallback: 'no_image.jpg',size: "200x200" %>
    </div>

    <div class="col-xs-6">

      <div>
        <p class="col-xs-4">商品名</p><span><%= @item.name %></span>
      </div>

      <div>
        <p class="col-xs-4">商品説明</p><span><%= @item.explanation %></span>
      </div>

      <div>
        <p class="col-xs-4">ジャンル</p><span><%= @item.genre.name %></span>
      </div>

      <div>
        <p class="col-xs-4">税込価格<br>(税抜価格)</p>
        <span><%= (@item.price*1.1).floor.to_s(:delimited) %>(<%= (@item.price).floor.to_s(:delimited) %>)円</span>
      </div>

      <div>
        <p class="col-xs-4">販売ステータス</p>
          <% if @item.is_saled == true %>
            <%= "販売中" %>
          <% else %>
            <%= "売り切れ" %>
          <% end %>
      </div>

      <div>
        <%= link_to "編集する",edit_admin_item_path(@item), class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>