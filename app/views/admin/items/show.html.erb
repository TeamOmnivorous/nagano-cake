<div class="container">
  <div class="row mt-5">
    <div class="col-2">
      <h2 class="table-secondary">商品詳細</h2>
     </div>
  </div>

  <div class="row mt-2">
    <div class="col-3">
      <%= image_tag @item.get_image %>
    </div>

    <div class="col-6 offset-2">
      <div>
        <p>商品名&nbsp;&nbsp;&nbsp;<%= @item.name %></p>
      </div>
      <div></div>
      <div>
        <p>商品説明&nbsp;&nbsp;&nbsp;<%= @item.explanation %></p>
      </div>

      <div>
        <p>ジャンル&nbsp;&nbsp;&nbsp;<%= @item.genre.name %></p>
      </div>

      <div>
        <p>税込価格<br>(税抜価格)&nbsp;&nbsp;&nbsp;
        <%= (@item.with_tax_price)%>円(<%= (@item.tax_out_price).floor.to_s(:delimited) %>円)</p>
      </div>

      <div>
        <p>販売ステータス&nbsp;&nbsp;&nbsp;
          <% if @item.is_saled == true %>
            <strong class="text-success"><%= "販売中" %></strong>
          <% else %>
            <strong class="text-secondary"><%= "販売停止中" %></strong>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <div class="row mb-5">
    <div class="col-3"></div>
    <div class="col-6 offset-3">
      <%= link_to "編集する",edit_admin_item_path(@item), class: "btn btn-success item_show_btn" %>
    </div>
  </div>

 </div>

