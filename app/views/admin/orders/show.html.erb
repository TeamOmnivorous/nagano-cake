<div class="container-fluid">
  <div class="row">
    <div class="col-lg-10 mx-auto my-5">
      <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-2"><h4 class="headline">注文履歴詳細</h4></div>
      </div>
      <div class="row mb-2">
        <div class="col-lg-10 mx-auto">
          <div class="row mb-2">
            <div class="col-lg-4">
              <h3>購入者</h3>
            </div>
            <div class="col-lg-7">
              <h3><%= @order.customer.last_name %> <%= @order.customer.first_name %></h3>
            </div>
          </div>

          <div class="row mb-2">
            <div class="col-lg-4">
              <h3><%= "注文日" %></h3>
            </div>
            <div class="col-lg-7">
              <h3><%= @order.created_at.strftime('%Y/%m/%d') %></h3>
            </div>
          </div>

          <div class="row mb-4">
            <div class="col-lg-4">
              <h3><%= "配送先" %></h3>
            </div>
            <div class="col-lg-7">
              <h3><%= @order.address %></h3>
            </div>
          </div>

          <div class="row mb-2">
            <div class="col-lg-4">
              <h3><%= "支払い方法" %></h3>
            </div>
            <div class="col-lg-7">
              <h3><%= @order.pay_type %></h3>
            </div>
          </div>

          <div class="row mb-2">
            <div class="col-lg-4">
              <h3><%= "注文ステータス" %></h3>
            </div>
            <div class="col-lg-4">
              <%= form_with model:[:admin,@order], method: :patch, local:true do |f| %>
              <h3>
                <%= f.select :order_status, Order.order_statuses.keys, class: "order_status" %>
              </h3>
              </div>
              <button type="submit" class="btn btn-success">更新</button>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row ">
        <div class="col-lg-10 mx-auto">
          <div class="row">
            <div class="col-lg-8">
              <table class='table table-bordered'>
                <thead>
                  <tr class="table-secondary">
                    <th>商品名</th>
                    <th>単価（税込）</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th>制作ステータス</th>
                    <th colspan="2"></th>

                  </tr>
                </thead>
                <tbody>
                  <% @order_items.each do |order_items| %>
                    <tr>
                      <td><%= order_items.item.name%></td>
                      <td><%= order_items.price%></td>
                      <td><%= order_items.amount%></td>
                      <td><%= order_items.subtotal%></td>
                      <% @total = @total+ order_items.subtotal %>

                      <%= form_with model: [:admin,@order] ,method: :patch,local:true do |f| %>
                        <td>
                          <%= f.select :making_status, OrderItem.making_statuses.keys, class: "making_status" %>
                        </td>
                        <td><button type="submit" class="btn btn-success">新規登録</button></td>
                      <% end %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="col-lg-4">
              <div class="row mb-4 mx-auto">
                <div class="col-lg-6">
                  <h3><%= "商品合計" %></h3>
                </div>
                <div class="col-lg-5">
                  <h3><%= @total %>円</h3>
                </div>
              </div>
              <div class="row mb-4 mx-auto">
                <div class="col-lg-6">
                  <h3><%= "送料" %></h3>
                </div>
                <div class="col-lg-5">
                  <h3><%= @order.postage %>円</h3>
                </div>
              </div>
              <div class="row mb-4 mx-auto">
                <div class="col-lg-6">
                  <h3><%= "請求金額合計" %></h3>
                </div>
                <div class="col-lg-5">
                  <h3><%= @total+@order.postage %>円</h3>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>