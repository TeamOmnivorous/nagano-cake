<div class="container-fluid">
  <div class="row">
    <div class="col-lg-10 mx-auto my-5">
      <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-2"><h4 class="headline">注文履歴詳細</h4></div>
      </div>
      <div class="row mb-2">
        <div class="col-lg-10 mx-auto">
          <div class="row mb-2">
            <div class="col-lg-4">
              <h5 class="bold">購入者</h5>
            </div>
            <div class="col-lg-7">
              <%= link_to admin_customer_path(@order.customer_id) do %>
                <h5 class="text-dark"><u><%= @order.customer.last_name+@order.customer.first_name %></u></h5>
              <% end %>
            </div>
          </div>

          <div class="row mb-2">
            <div class="col-lg-4">
              <h5 class="bold"><%= "注文日" %></h5>
            </div>
            <div class="col-lg-7">
              <h5><%= @order.created_at.strftime('%Y/%m/%d') %></h5>
            </div>
          </div>

          <div class="row mb-4">
            <div class="col-lg-4">
              <h5 class="bold"><%= "配送先" %></h5>
            </div>
            <div class="col-lg-7">
              <h5><%= @order.address %></h5>
              <h5><%= @order.name %></h5>
            </div>
          </div>

          <div class="row mb-2">
            <div class="col-lg-4">
              <h5 class="bold"><%= "支払い方法" %></h5>
            </div>
            <div class="col-lg-7">
              <h5><%= @order.pay_type %></h5>
            </div>
          </div>

          <div class="row mb-2">
            <div class="col-lg-4">
              <h5 class="bold"><%= "注文ステータス" %></h5>
            </div>
            <div class="col-lg-4">
              <%= form_with model:[@order], url: admin_order_path(@order),  method: :patch, local:true do |f| %>
                <div class="row mb-2">
                  <h5 class="col-6">
                    <%= f.select :order_status, Order.order_statuses.keys, class: "order_status" %>
                  </h5>
                  <div>
                    <%= f.submit "更新", class: "btn btn-success btn-block" %>
                  </div>

                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row ">
        <div class="col-lg-10 mx-auto">
          <div class="row">
            <div class="col-lg-8">
              <table class='table table-bordered'>
                <thead>
                  <tr class="table-secondary">
                    <th>商品名</th>
                    <th>単価（税込）</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th>製作ステータス</th>
                    <th style="width: 5%"></th>

                  </tr>
                </thead>
                <tbody>
                  <% @order_items.each do |order_items| %>
                    <tr>
                      <td><%= order_items.item.name%></td>
                      <td align="center"><%= order_items.price.to_s(:delimited)%></td>
                      <td align="center"><%= order_items.amount.to_s(:delimited)%></td>
                      <td align="center"><%= order_items.subtotal.to_s(:delimited)%></td>
                      <% @total = @total+ order_items.subtotal %>

                      <%= form_with model: [:admin,order_items], url: admin_order_item_path(order_items),method: :patch,local:true do |f| %>
                        <td align="center">
                          <h5><%= f.select :making_status, OrderItem.making_statuses.keys, class: "making_status" %><h5>
                        </td>
                        <td><div><%= f.submit "更新", class: "btn btn-success btn-block" %></div></td>
                      <% end %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="col-lg-4">
              <div class="row mb-4 mx-auto">
                <div class="col-lg-6">
                  <h5 class="bold"><%= "商品合計" %></h5>
                </div>
                <div class="col-lg-5">
                  <h5><%= @total.to_s(:delimited) %>円</h5>
                </div>
              </div>
              <div class="row mb-4 mx-auto">
                <div class="col-lg-6">
                  <h5 class="bold"><%= "送料" %></h5>
                </div>
                <div class="col-lg-5">
                  <h5><%= @order.postage.to_s(:delimited) %>円</h5>
                </div>
              </div>
              <div class="row mb-4 mx-auto">
                <div class="col-lg-6">
                  <h5 class="bold"><%= "請求金額合計" %></h5>
                </div>
                <div class="col-lg-5">
                  <h5><%= @order.total_payment.to_s(:delimited) %>円</h5>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>