<div class="container px-5 px-sm-0">
  <div class="row">
     <div class="col-md-3">
        <h3>ショッピングカート</h3>
        <div>カートを空にする</div>
     </div>
  </div>
       <table class='table table-bordered'>
    <thead>
      <tr class="table-secondary">
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= form_with model:cart_item,url:cart_item_path(cart_item), method: :patch do |f| %></td>
          <td><%= cart_item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
        </tr>
      <% end %>

