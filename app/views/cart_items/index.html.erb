<div class="container">
  <div class="row">
     <div class="col-4">
        <h4 class="m-4"><span style="background-color:#eeeeee">ショッピングカート</span></h4>
     </div>
     <div class= "col-5"></div>
     <div class="col-3">
     <p class="m4-4"><%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete,class: "btn btn-danger btn-sm" %></p>
   </div>
  </div>
</div>
 <div class="row">
  <table class='col-md-12 table table-hover table-bordered'>
    <thead>
      <tr class="table-warning">
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
           <td><%= form_with model:cart_item,url:cart_item_path(cart_item), method: :patch do |f| %>
           <%= f.hidden_field :item_id, :value => cart_item.item.id %>
           <%= f.select :amount, *[1..10],include_blank: "個数選択" %>
           <%= f.submit "変更",class: "btn btn-success" %>
           <!--変更した際にフォームヘルパーformwith,urlで戻ってくるため-->
        <% end %>
      </td>
      <td><%= cart_item.subtotal.to_s(:delimited) %></td>
      <!--文字列型から数値型に変換-->
      <!--小計-->
      <td> <%= link_to "削除する", cart_item_path(cart_item), method: :delete, "data-confirm" => "本当に削除しますか？",class: "btn btn-danger" %></td>
      </tr>
        <% @total_payment +=  cart_item.subtotal %>
        <!--アイテムごとに合計金額totalに反映 計算しておく-->
      <% end %>
    </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-md-4 mt-3">
     <%= link_to "買い物を続ける", items_path,class: "btn btn-outline-primary" %>
  </div>
  <table class="table table-bordered text-left">
    </thead>
      <tr>
       <td>合計金額</td>
      <!--<td>合計金額</td>-->
       <td><%= @total_payment.to_s(:delimited) %></td>
      <!--文字列型から数値型に変換-->
     </tr>
    </thead>
   </table>
  </div>
  <% if @cart_items.present? %>
  <div class="row align-item-end">
    <div class="col">
      <%= link_to "情報入力画面に進む",new_order_path,class:"btn btn-success" %>
      </div>
      <% else %>
      <h5 class="text-center">カートに存在しません。</h5>
    <% end %>
  </div>
</div>

