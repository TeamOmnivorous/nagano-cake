<div class="container px-5 px-sm-0">
  <div class="row">
     <div class="col-md-3">
        <h3>ショッピングカート</h3>
        <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete,class: "btn btn-danger btn-sm" %>
     </div>
  </div>
       <table class='table table-bordered'>
    <thead>
      <tr class="table-secondary">
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
           <td><%= form_with model:cart_item,url:cart_item_path(cart_item), method: :patch do |f| %>
           <%= f.hidden_field :item_id, :value => cart_item.item.id %>
           <%= f.select :amount, *[1..10] %>
           <%= f.submit "変更",class: "btn btn-success" %>
           <!--変更した際にフォームヘルパーformwith,urlで戻ってくるため-->
        <% end %>
      </td>
      <td><%= cart_item.subtotal.to_s(:delimited) %></td>
      <!--文字列型から数値型に変換-->
      <!--小計-->
      <td> <%= link_to "削除する", cart_item_path(cart_item), method: :delete,class: "btn btn-danger" %></td>
      </tr>
        <% @total_payment +=  cart_item.subtotal %>
        <!--アイテムごとに合計金額totalに反映 計算しておく-->
      <% end %>
    </tbody>
    </table>
  </div>
  <div class="low">
     <%= link_to "買い物を続ける", root_path,class: "btn btn-danger" %>
  </div>
  <table>
    </thead>
    <tr>
      <td>合計金額</td>
      <!--<td>合計金額</td>-->
      <td><%= @total_payment.to_s(:delimited) %></td>
      <!--文字列型から数値型に変換-->
    </tr>
    </thead>
  </table>
  </div>
