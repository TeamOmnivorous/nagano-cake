<div class="container">
  <div class="col-lg-10 offset-lg-1">
    <div class="row">
      <div class="col-lg-5 text-center mb-3">
        <h2 class="head-line title_h2 text-center">登録情報編集</h2>
      </div>
    </div>

    <%= form_with model: @customer, url: infomation_path, local: true ,method: :patch do |f| %>

      <div class="row info_field">
        <%= f.label :"氏名", class: "col-lg-2" %>
        <div class="col-lg-1"></div>
        <%= f.text_field :last_name, autofocus: true, class:"col-xs-2" %>
        <div class="col-lg-1"></div>
        <%= f.text_field :first_name, class:"col-xs-2" %>
      </div>

      <div class="row info_field">
        <%= f.label :"フリガナ", class: "col-lg-2" %>
        <div class="col-lg-1"></div>
        <%= f.text_field :last_name_kana, class:"col-xs-2"%>
        <div class="col-lg-1"></div>
        <%= f.text_field :first_name_kana, class:"col-xs-2" %>
      </div>

      <div class="row info_field">
        <%= f.label :"メールアドレス", class: "col-lg-2" %>
        <div class="col-lg-1"></div>
        <%= f.email_field :email, autocomplete: "email", class:"col-xs-2" %>
      </div>

      <div class="row info_field">
        <%= f.label :"郵便番号(ハイフンなし)", class: "col-lg-3" %>
        <%= f.text_field :postal_code, class:"col-xs-2" %>
      </div>

      <div class="row info_field">
        <%= f.label :"住所", class: "col-lg-2" %>
        <div class="col-lg-1"></div>
        <%= f.text_field :address, class:"col-xs-5" %>
      </div>

      <div class="row info_field">
        <%= f.label :"電話番号(ハイフンなし)", class: "col-lg-3" %>
        <%= f.text_field :phone_number, class:"col-xs-2" %>
      </div>

      <div>
        <div class="col-lg-5 text-center">
          <%= f.submit "編集内容を保存する", class: "btn btn-success" %>

          <%= link_to '退会する', unsubscribe_path, class: "glyphicon glyphicon-tint btn btn-danger"%>
        </div>
      </div>
    <% end %>
  </div>
</div>