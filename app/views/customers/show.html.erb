<div class="container">
  <div class="row mt-5">
    <div class ="col-1"></div>
    <div class ="col-2">
      <h2 class="table-secondary">マイページ</h2>
    </div>
  </div>
  <div class="row my-3">
    <div class="my_page_btn col-2">
        <h3>登録情報</h3>
    </div>
    <div class="my_page_btn col-2">
        <span><%= link_to "編集する",  infomation_edit_path, class: "btn btn-success" %></span>
    </div>
  </div>


  <div class="row mt-3">
    <div class="col-sm-8">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="information col-3 table-secondary">氏名</td>
            <td><%= (@customer.last_name + @customer.first_name) %></td>
          </tr>
          <tr>
            <td class="information col-3 table-secondary">カナ</td>
            <td><%= (@customer.last_name_kana + @customer.first_name_kana) %></td>
          </tr>
          <tr>
            <td class="information col-3 table-secondary">郵便番号</td>
            <td><%= @customer.postal_code.to_s.insert(3, "-") %></td>
          </tr>
          <tr>
            <td class="information col-3 table-secondary">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="information col-3 table-secondary">電話番号</td>
            <td><%= @customer.phone_number %> </td>
          </tr>
          <tr>
            <td class="information col-3 table-secondary">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-2">
      <b>配送先</b>
    </div>
    <div class="col-3">
      <%= link_to "一覧を見る", deliveries_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row mt-3 mb-5">
    <div class="col-2">
        <b>注文履歴</b>
    </div>
    <div class="col-3">
        <%= link_to"一覧を見る",orders_path,class:"btn btn-primary" %>
    </div>
  </div>
</div>