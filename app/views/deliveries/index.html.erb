<div class="container">
  <div>
    <h1 class="headline">配送先登録/一覧</h1>
  </div>

  <div>
    <%= form_with model: @deli,local:true do |f| %>
    <div class="form-group">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :postal_code, class: 'form-control deliveries_postal_code' %>
    </div>
    <div class="form-group">
      <%= f.label :住所 %>
      <%= f.text_area :address, class: 'form-control deliveries_address' %>
    </div>

    <div class="form-group">
      <%= f.label :宛名 %>
      <%= f.text_field :name, class: 'form-control deliveries_name' %>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-success">新規登録</button>
    </div>
    <% end %>
  </div>


  <table class='table table-bordered'>
    <thead>
      <tr class="table-secondary">
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th colspan="6"></th>
      </tr>
    </thead>
    <tbody>
      <% @delis.each do |delivery| %>
        <tr>
          <td><%= delivery.postal_code %></td>
          <td><%= delivery.address %></td>
          <td><%= delivery.name %></td>
          <td><%= link_to '編集する', edit_delivery_path(@delis), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to '削除する', delivery_path(@delis.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>