<div class="container">
  <div>
    <h1 class="headline">配送先登録/一覧</h1>
  </div>

  <div class="col mb-5">
    <%= form_with model: @deli,local:true do |f| %>
    <div class="row mb-2">
      <div class="col-3"><%= f.label :郵便番号（ハイフンなし） %></div>
      <div class="col-3"><%= f.text_field :postal_code, class: 'form-control deliveries_postal_code' %></div>
    </div>

    <div class="row mb-2">
      <div class="col-3"><%= f.label :住所 %></div>
      <div class="col-6"><%= f.text_field :address, class: 'form-control deliveries_address' %></div>
    </div>

    <div class="row mb-2">
      <div class="col-3"><%= f.label :宛名 %></div>
      <div class="col-3"><%= f.text_field :name, class: 'form-control deliveries_name' %></div>
      <div class="col-3"></div>
      <button type="submit" class="btn btn-success">新規登録</button>
    </div>
    <% end %>
  </div>

  <div class="col-9 px-0 ">
    <table class='table table-bordered'>
      <thead>
        <tr class="table-secondary">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @delis.each do |delivery| %>
          <tr>
            <td><%= delivery.postal_code %></td>
            <td><%= delivery.address %></td>
            <td><%= delivery.name %></td>
            <td><%= link_to '編集する', edit_delivery_path(delivery.id), class: "btn btn-sm btn-success" %>
                <%= link_to '削除する', delivery_path(delivery.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>