<div class="container px-5 px-sm-0">
  <div class="row">
     <div class="col-md-3">
      <!--%= render 'genre_search',genres:@genres%--><!--@genresが解放され次第コメントアウト解く-->
     </div>
    <div class="col-md-8.offset-md-1">
      <h2>Book detail</h2>
      <table class="item_show_table">
        <tbody>
          <tr>
            <td><%= image_tag @item.user.get_profile_image(100,100) %><br>
            <%= link_to @book.user.name, user_path(@user.id) %></td>

            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id),method: :delete, class:"btn btn-sm btn-danger" %></td>
              <% end %>