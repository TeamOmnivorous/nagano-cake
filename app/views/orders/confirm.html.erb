<div class="container">
  <div class="row">
    <div class="col-lg-12 mx-auto my-5">
      <h4 class="headline">注文情報確認</h4>

      <div class="row">
        <div class="col-lg-9">
          <table class="table table-bordered">
            <thead class="table-light">
              <tr>
                <th style="width: 40%">商品名</th>
                <th style="width: 20%">単価(税込)</th>
                <th style="width: 20%">数量</th>
                <th style="width: 20%">小計</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="col-lg-3">
          <table class="table table-bordered">
            <tr>
              <th>送料</th>
              <td align="right">800</td>
            </tr>
            <tr>
              <th>商品合計</th>
              <td align="right"></td>
            </tr>
            <tr>
              <th>請求金額</th>
              <td align="right"></td>
            </tr>
          </table>
        </div>
      </div>

      <div class="row mt-2">
        <div class="col-lg-2">
          <h5>支払方法</h5>
        </div>
        <div class="col-lg-5"><%= @order.pay_type %></div> <!-- 要修正 -->
      </div>

      <div class="row mt-2">
        <div class="col-lg-2">
          <h5>お届け先</h5>
        </div>
        <div class="col-lg-5">
          〒<%= @order.postal_code %>
          <%= @order.address %><br>
          <%= @order.name %>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col-lg-2 mx-auto">
          <div class="actions">
            <%= link_to "注文を確定する", complete_path, class: "btn btn-danger" %> <!-- あとで実装 -->
          </div>
        </div>
      </div>

    </div>
  </div>
</div>