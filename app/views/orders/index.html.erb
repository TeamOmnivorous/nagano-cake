<div class="container">
  <div class="row">
    <div class="col-lg-12 my-5">
      <h4 class="headline">注文履歴一覧</h4>

      <table class="table table-bordered">
        <thead class="table-light">
          <tr>
            <th style="width: 10%">注文日</th>
            <th style="width: 40%">配送先</th>
            <th style="width: 20%">注文商品</th>
            <th style="width: 10%">支払金額</th>
            <th style="width: 10%">ステータス</th>
            <th style="width: 10%">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at %></td>
              <td>
                〒<%= order.delivery.postal_code %><br>
                <%= order.delivery.address %><br>
                <%= order.delivery.name %>
              </td>
              <td>
                <% @order_items.each do |order_item| %>
                  <%= order_item.name %><br>
                <% end %>
              </td>
              <td><%= order.total_payment %></td>
              <td><%= order.order_status %></td>
              <td><%= link_to "表示する", order_path(@order), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>