<div class="container">
  <div class="row">
    <div class="col-lg-12 my-5">
      <h4 class="headline">注文情報入力</h4>

      <%= form_with model: @order, url: orders_path do |f| %>
      <div class="row">
        <p>支払方法</p>
      </div>
      <div class="row ml-3">
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.radio_button :pay_type, 1 %>
            <%= f.label :pay_type, "クレジットカード", value: 1 %>
          </div>
        </div>
      </div>
      <div class="row ml-3">
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.radio_button :pay_type, 2 %>
            <%= f.label :pay_type, "銀行振込", value: 2 %>
          </div>
        </div>
      </div>

      <div class="row">
        <p>お届け先</p>
      </div>
      <div class="row ml-3">
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.radio_button :address, 1 %>
            <%= f.label :address, "ご自身の住所", value: 1 %>
            <div>〒　住所</div>
            <div>名前</div>
          </div>
        </div>
      </div>
      <div class="row ml-3 mt-2">
        <div class="col-lg-12">
          <div class="form-group">
            <%= f.radio_button :address, 2 %>
            <%= f.label :address, "登録済住所から選択", value: 2 %>
          <div>プルダウンで選択するやつ</div>
          </div>
        </div>
      </div>
      <div class="row ml-3 mt-2">
        <div class="form-group">
          <%= f.radio_button :address, 3 %>
          <%= f.label :address, "新しいお届け先", value: 3 %>
          <div class="row mb-2">
            <div class="col-lg-3">
              <%= f.label "郵便番号" %>
            </div>
            <div class="col-lg-7">
              <%= f.text_field :postal_code, class: "form-control" %>
            </div>
          </div>
          <div class="row mb-2">
            <div class="col-lg-3">
              <%= f.label "住所" %>
            </div>
            <div class="col-lg-7">
              <%= f.text_field :address, class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-3">
              <%= f.label "宛名" %>
            </div>
            <div class="col-lg-7">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-10 mx-auto">
              <%= f.submit "確認画面へ進む", class: "btn btn-info" %>
            </div>
          </div>

        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>