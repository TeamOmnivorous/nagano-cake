<div class="container">
  <div class="row">
    <div class="col-md-12 my-5">
      <h4 class="headline">注文情報入力</h4>

      <%= form_with model: @order, url: confirm_path do |f| %>
        <div class="row">
          <p>支払方法</p>
        </div>

        <div class="row ml-3">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.radio_button :pay_type, Order.pay_types.key(0), checked: true %>
              <%= f.label :pay_type, "クレジットカード" %>
            </div>
          </div>
        </div>

        <div class="row ml-3">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.radio_button :pay_type, Order.pay_types.key(1) %>
              <%= f.label :pay_type, "銀行振込" %>
            </div>
          </div>
        </div>

        <div class="row">
          <p>お届け先</p>
        </div>

        <div class="row ml-3">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.radio_button :select_address, 1, checked: true %>
              <%= f.label :select_address, "ご自身の住所", value: 1 %>
              <div class="ml-3">
                〒<%= current_customer.postal_code %>
                <%= current_customer.address %><br>
                <%= current_customer.last_name %>
                <%= current_customer.first_name %>
              </div>
            </div>
          </div>
        </div>

        <div class="row ml-3 mt-2">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.radio_button :select_address, 2 %>
              <%= f.label :select_address, "登録済住所から選択", value: 2 %>
              <div class="col-md-10 ml-3">
                <%= f.collection_select(:delivery_id, current_customer.deliveries, :id, :delivery_display, { include_blank: '-- 選択してください --'}, { class: "form-control" }) %>
              </div>
            </div>
          </div>
        </div>

        <div class="row ml-3 mt-2">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.radio_button :select_address, 3 %>
              <%= f.label :select_address, "新しいお届け先", value: 3 %>
              <div class="row mb-2">
                <div class="col-md-3 ml-3">
                  <%= f.label "郵便番号(ハイフンなし)" %>
                </div>
                <div class="col-md-3">
                  <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col-md-3 ml-3">
                  <%= f.label "住所" %>
                </div>
                <div class="col-md-6">
                  <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col-md-3 ml-3">
                  <%= f.label "宛名" %>
                </div>
                <div class="col-md-3">
                  <%= f.text_field :name, placeholder: "令和道子", class: "form-control" %>
                </div>
              </div>
              <div class="row mt-5">
                <div class="col-md-2 mx-auto">
                  <div class="actions">
                    <%= f.submit "確認画面へ進む", class: "btn btn-info btn-block" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>