<div class="container">
  <div class="row">
    <div class="col-md-12 my-5">
      <h4 class="headline">注文履歴詳細</h4>

      <div class="row">
        <div class="col-md-6">
          <p>注文情報</p>
          <table class="table table-bordered">
            <tr>
              <th>注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td>
                〒<%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td><%= @order.pay_type %></td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td><%= @order.order_status %></td>
            </tr>
          </table>
        </div>

        <div class="col-md-4">
          <p>請求情報</p>
          <table class="table table-bordered">
            <tr>
              <th>商品合計</th>
              <td align="right"><%= @sum.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th>配送料</th>
              <td align="right"><%= @order.postage %></td>
            </tr>
            <tr>
              <th>ご請求額</th>
              <td align="right"><%= @order.total_payment.to_s(:delimited) %></td>
            </tr>
          </table>
        </div>

        <div class="col-md-8">
          <p>注文内容</p>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th style="width: 60%">商品</th>
                <th style="width: 20%">単価(税込)</th>
                <th style="width: 10%">個数</th>
                <th style="width: 10%">小計</th>
              </tr>
            </thead>
            <tbody>
              <% @order_items.each do |order_item| %>
                <tr>
                  <td><%= order_item.item.name %></td>
                  <td align="right"><%= order_item.price.to_s(:delimited) %></td>
                  <td align="right"><%= order_item.amount %></td>
                  <td align="right"><%= order_item.subtotal.to_s(:delimited) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>

    </div>
  </div>
</div>